@model IEnumerable<ModelEmployees.Entities.Employee>

@{
    ViewBag.Title = "Admin";
}

<div>
    @if (TempData["message"] != null)
    {
        <div class="alert alert-success">@TempData["message"]</div>
    }
</div>

<div class="panel panel-default">

    <div class="panel-heading">
        <h3>Все сотрудники</h3>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-condensed table-bordered">
            <tr>
                <th class="text-center">ID</th>
                <th class="text-center">Имя</th>
                <th class="text-center">Должность</th>
                <th class="text-center">Статус</th>
                <th class="text-center">Зарплата</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-right">@item.EmployeeID</td>
                    <td>@Html.ActionLink(item.Name, "Edit", new { item.EmployeeID })</td>
                    <td>@item.Capacity</td>
                    <td class="text-center">@(item.Status == true ? "Активен" : "Неактивен")</td>
                    <td class="text-right">@item.Salary.ToString("c")</td>
                </tr>
            }
        </table>
    </div>
    <div class="panel-footer">
        @Html.ActionLink("Добавить нового сотрудника", "Create", null,
            new { @class = "btn btn-default" })
    </div>
</div>
